@import url("http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,400italic")
body
  padding 60px 0px
  background-color rgb(220, 220, 220)

.event-list
  list-style none
  font-family 'Lato', sans-serif
  margin 0px
  padding 0px
  & > li
    background-color rgb(255, 255, 255)
    box-shadow 0px 0px 5px rgb(51, 51, 51)
    box-shadow 0px 0px 5px rgba(51, 51, 51, 0.7)
    padding 0px
    margin 0px 0px 20px
    & > time
      display inline-block
      width 100%
      color rgb(255, 255, 255)
      background-color rgb(197, 44, 102)
      padding 5px
      text-align center
      text-transform uppercase
      & > span
        display none
      & > .day
        display block
        font-size 56pt
        font-weight 100
        line-height 1
    &:nth-child(even)
      & > time
        background-color rgb(165, 82, 167)
    time
      & > .month
        display block
        font-size 24pt
        font-weight 900
        line-height 1
    & > img
      width 100%
    & > .info
      padding-top 5px
      text-align center
      & > .title
        font-size 17pt
        font-weight 700
        margin 0px
      & > .desc
        font-size 13pt
        font-weight 300
        margin 0px
      & > ul
        & > li
          & > a
            display block
            width 100%
            color rgb(30, 30, 30)
            text-decoration none
    & > .social
      & > ul
        margin 0px
        & > li
          padding 0px
          & > a
            padding 3px 0px

.event-list > li > .info > ul,
.event-list > li > .social > ul
  display table
  list-style none
  margin 10px 0px 0px
  padding 0px
  width 100%
  text-align center

.event-list > li > .info > ul > li,
.event-list > li > .social > ul > li
  display table-cell
  cursor pointer
  color rgb(30, 30, 30)
  font-size 11pt
  font-weight 300
  padding 3px 0px

.event-list > li > .info > ul > li:hover,
.event-list > li > .social > ul > li:hover
  color rgb(30, 30, 30)
  background-color rgb(200, 200, 200)

.facebook a,
.twitter a,
.google-plus a
  display block
  width 100%
  color rgb(75, 110, 168) !important

.twitter
  a
    color rgb(79, 213, 248) !important
  &:hover
    a
      color rgb(255, 255, 255) !important
      background-color rgb(79, 213, 248) !important

.google-plus
  a
    color rgb(221, 75, 57) !important
  &:hover
    a
      color rgb(255, 255, 255) !important
      background-color rgb(221, 75, 57) !important

.facebook
  &:hover
    a
      color rgb(255, 255, 255) !important
      background-color rgb(75, 110, 168) !important

@media (min-width: 768px)
  .event-list
    & > li
      position relative
      display block
      width 100%
      height 120px
      padding 0px
      & > .info
        background-color rgb(245, 245, 245)
        overflow hidden
        position relative
        height 120px
        text-align left
        padding-right 40px
        & > ul
          position absolute
          left 0px
          bottom 0px
      & > .social
        position absolute
        top 0px
        right 0px
        display block
        width 40px
        & > ul
          border-left 1px solid rgb(230, 230, 230)
          & > li
            display block
            padding 0px
            & > a
              display block
              width 40px
              padding 10px 0px 9px

  .event-list > li > time,
  .event-list > li > img
    display inline-block
    width 120px
    float left
    width 120px
    height 120px
    padding 0px
    margin 0px

  .event-list > li > .info > .title, 
  .event-list > li > .info > .desc
    padding 0px 10px